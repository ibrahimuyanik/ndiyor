@model PresentationLayer.Models.LoginViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
    <section class="login-signup section-padding">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="co-lg-10">
                    <div class="login">
                      

                        <h3 class="mt-4" style="text-align:center">GİRİŞ YAP</h3>
                        
                        <form method="post" class="login-form row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="loginemail">Kullanıcı Adı</label>
                                    <input type="text" id="loginemail" class="form-control" asp-for="Username"  placeholder="Kullanıcı Adı" required>
                                    <span asp-validation-for="Username" class="text-danger "></span>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="loginPassword">Şifre</label>
                                    <input type="password" id="loginPassword" class="form-control" asp-for="Password" placeholder="Şifre" required>
                                    <span asp-validation-for="Password" class="text-danger "></span>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <button class="btn btn-primary" type="submit">Giriş Yap</button>
                          
                                <p class="mt-5 mb-0">Henüz Üye Değil Misiniz? <a href="/Register/Index/">Kayıt Ol</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
