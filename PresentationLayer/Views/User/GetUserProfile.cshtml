@model EntityLayer.DTOs.AppUserEditDto
@{
    ViewData["Title"] = "GetUserProfile";
    Layout = "~/Views/Shared/_UserProfileLayout.cshtml";
}

<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<head>
    <title>Profilim</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<div class="container bootstrap snippet">
    <div class="row">
        <div class="col-sm-12"><h1 style="text-align:center;color:brown">Hoşgeldin  @Model.Name ! </h1></div>

    </div>
    <div class="row">
        <div class="col-sm-3">
            <!--left col-->
            <div class="text-center">
                <img src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" class="avatar img-circle img-thumbnail" alt="avatar">
            </div></hr><br>
        </div><!--/col-3-->
        <div class="col-sm-9">
            <ul class="nav nav-tabs">
                <li class="active"></li>
            </ul>


            <div class="tab-content">
                <div class="tab-pane active" id="home">
                    <hr>
                    <form class="form" method="post" id="registrationForm">
                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="first_name"><h4>İsim</h4></label>
                                <input type="text" class="form-control" asp-for="Name" id="first_name" placeholder="İsim" title="enter your first name if any.">
                            </div>
                        </div>

                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="last_name"><h4>Soyisim</h4></label>
                                <input type="text" class="form-control" asp-for="Surname" id="last_name" placeholder="Soyisim" title="enter your last name if any.">
                            </div>
                        </div>
                        <br />
                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="last_name"><h4>Kullanıcı Adı</h4></label>
                                <input type="text" class="form-control" asp-for="UserName" id="last_name" placeholder="Kullanıcı Adı" title="enter your last name if any.">
                            </div>
                        </div>
                        <br />
                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="email"><h4>Mail</h4></label>
                                <input type="email" class="form-control" asp-for="Email" id="email" placeholder="you@email.com" title="enter your email.">
                            </div>
                        </div>
                        <br />
                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="password"><h4>Yeni Şifre</h4></label>
                                <input type="password" class="form-control" asp-for="Password" id="password" placeholder="Yeni Şifre" title="enter your password.">
                            </div>
                        </div>
                        <br />
                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="password2"><h4>Şifre Tekrar</h4></label>
                                <input type="password" class="form-control" asp-for="ConfirmPassword" id="password2" placeholder="Şifre Tekrar" title="enter your password2.">
                            </div>
                        </div>
                        <br />
                        <div class="form-group">
                            <div class="col-xs-12">
                                <br>
                                <button class="btn btn-lg btn-success" type="submit"><i class="glyphicon glyphicon-ok-sign"></i> Kaydet</button>
                                <button class="btn btn-lg" type="reset"><i class="glyphicon glyphicon-repeat"></i> Temizle</button>
                            </div>
                        </div>
                    </form>

                    <hr>

                </div><!--/tab-pane-->

            </div><!--/tab-pane-->
        </div><!--/tab-content-->

    </div><!--/col-9-->
</div><!--/row-->
