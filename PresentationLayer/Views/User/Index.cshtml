<div class="container bootstrap snippet">
    <div class="row">
        <div class="col-sm-10"><h1 style="text-align:center;color:brown">Hoşgeldiniz</h1></div>
      
    </div>
    <div class="row">
        <div class="col-sm-3">
            <!--left col-->
            <div class="text-center">
                <img src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" class="avatar img-circle img-thumbnail" alt="avatar">
            </div></hr><br>
        </div><!--/col-3-->
        <div class="col-sm-9">
            <ul class="nav nav-tabs">
                <li class="active" >Kullanıcı Bilgileri</li>
            </ul>


            <div class="tab-content">
                <div class="tab-pane active" id="home">
                    <hr>
                    <form class="form" action="##" method="post" id="registrationForm">
                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="first_name"><h4>İsim</h4></label>
                                <input type="text" class="form-control" name="first_name" id="first_name" placeholder="İsim" title="enter your first name if any.">
                            </div>
                        </div>
                    
                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="last_name"><h4>Soyisim</h4></label>
                                <input type="text" class="form-control" name="last_name" id="last_name" placeholder="Soyisim" title="enter your last name if any.">
                            </div>
                        </div>
                        <br />
                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="last_name"><h4>Kullanıcı Adı</h4></label>
                                <input type="text" class="form-control" name="last_name" id="last_name" placeholder="Kullanıcı Adı" title="enter your last name if any.">
                            </div>
                        </div>
                     <br />
                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="email"><h4>Mail</h4></label>
                                <input type="email" class="form-control" name="email" id="email" placeholder="you@email.com" title="enter your email.">
                            </div>
                        </div>
                        <br />
                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="password"><h4>Yeni Şifre</h4></label>
                                <input type="password" class="form-control" name="password" id="password" placeholder="Yeni Şifre" title="enter your password.">
                            </div>
                        </div>
                        <br />
                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="password2"><h4>Şifre Tekrar</h4></label>
                                <input type="password" class="form-control" name="password2" id="password2" placeholder="Şifre Tekrar" title="enter your password2.">
                            </div>
                        </div>
                        <br />
                        <div class="form-group">
                            <div class="col-xs-12">
                                <br>
                                <button class="btn btn-lg btn-success" type="submit"><i class="glyphicon glyphicon-ok-sign"></i> Kaydet</button>
                                <button class="btn btn-lg" type="reset"><i class="glyphicon glyphicon-repeat"></i> Temizle</button>
                            </div>
                        </div>
                    </form>

                    <hr>

                </div><!--/tab-pane-->
              
            </div><!--/tab-pane-->
        </div><!--/tab-content-->

    </div><!--/col-9-->
</div><!--/row-->
<script>
    $(document).ready(function () {


        var readURL = function (input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('.avatar').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }


        $(".file-upload").on('change', function () {
            readURL(this);
        });
    });
</script>
