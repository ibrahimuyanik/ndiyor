@model EntityLayer.Concrete.AppUser
@{
    Layout = null;
}

<!DOCTYPE html>


<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Onayla</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!--Favicon-->
    <link rel="shortcut icon" href="~/newsbit-main/theme/images/favicon.ico" type="image/x-icon">
    <link rel="icon" href="~/newsbit-main/theme/images/favicon.ico" type="image/x-icon">
    <link rel="apple-touch-icon" sizes="180x180" href="~/newsbit-main/theme/images/apple-touch-icon.png">

    <!-- THEME CSS
    ================================================== -->
    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/newsbit-main/theme/plugins/bootstrap/css/bootstrap.min.css">
    <!-- FontAwesome -->
    <link rel="stylesheet" href="~/newsbit-main/theme/plugins/font-awesome/css/font-awesome.min.css">
    <!-- Slick Carousel -->
    <link rel="stylesheet" href="~/newsbit-main/theme/plugins/slick-carousel/slick.css">
    <link rel="stylesheet" href="~/newsbit-main/theme/plugins/slick-carousel/slick-theme.css">
    <!-- manin stylesheet -->
    <link rel="stylesheet" href="~/newsbit-main/theme/css/style.css">
</head>
<body>


    <section class="login-signup section-padding">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-lg-7">
                    <div class="login">
                        <div class="text-center"><a href="index.html"><img src="~/newsbit-main/theme/images/logos/logo.png" alt="" class="img-fluid"></a></div>

                        <h3 class="mt-4">Mail Onaylama</h3>

                        <form method="post" class="login-form row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="loginemail">Onay Kodu</label>
                                    <input type="text" id="loginemail" asp-for="ConfirmCode" class="form-control"  placeholder="Onay Kodu" required>
                                    <span asp-validation-for="ConfirmCode" class="text-danger "></span>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <button class="btn btn-primary" type="submit">Onayla</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <!-- THEME JAVASCRIPT FILES
    ================================================== -->
    <!-- initialize jQuery Library -->
    <script src="~/newsbit-main/theme/plugins/jquery/jquery.js"></script>
    <!-- Bootstrap jQuery -->
    <script src="~/newsbit-main/theme/plugins/bootstrap/js/bootstrap.min.js"></script>
    <!-- Slick Slider -->
    <script src="~/newsbit-main/theme/plugins/slick-carousel/slick.min.js"></script>
    <!-- Google Map -->
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCC72vZw-6tGqFyRhhg5CkF2fqfILn2Tsw"></script>
    <script src="~/newsbit-main/theme/plugins/google-map/gmap.js"></script>
    <!-- main js -->
    <script src="~/newsbit-main/theme/js/custom.js"></script>

</body>
</html>