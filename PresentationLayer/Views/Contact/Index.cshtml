@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<section class="section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">


                <div class="row">
                    <div class="col-lg-12">
                        <h3 class="mt-4 mb-3" style="text-align:center">İLETİŞİME GEÇİN</h3>
                      
                    </div>
                </div>

                <form id="contact-form" method="post" class="my-5">
                    <div class="row">
                        <div class="col-md-12">
                         
                            <div class="form-group">
                                <label for="name">İsim:</label>
                                <input class="form-control form-control-name" name="NameSurname" id="name" type="text" required>
                            </div>

                            <div class="form-group">
                                <label for="email">Mail Adresi</label>

                                <input class="form-control form-control-email" name="SenderMail" id="email" type="email" required>
                            </div>

                            <div class="form-group">
                                <label for="topic">Konu</label>

                                <input class="form-control form-control-subject" name="Subject" id="subject" required>
                            </div>
                            <div class="form-group">
                                <label for="message">Mesaj:</label>
                                <textarea class="form-control form-control-message" name="Content" id="message" rows="7" required></textarea>
                            </div>

                            <button class="btn btn-primary solid blank mt-3" type="submit">Gönder</button>
                        </div>
                    
                    </div>
                </form>


            </div>
        </div>
    </div>
</section>