@model List<EntityLayer.Concrete.Test>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
<h1 style="text-align:center;color:darkblue">TESTLER</h1>
<br />
<a href="/Admin/Test/AddTest/" class="btn btn-success"> Yeni Test Oluştur</a>
<br />
<hr />
<table class="table table-bordered">
    <tr style="background-color:darkblue; text-align:center;color:white">
        <th>#</th>
        <th>Test Başlığı</th>
        <th>Test Kategorisi</th>
        <th>Test Resmi</th>
        <th>Sil</th>
        <th>Güncelle </th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr style="background-color:lightgray; text-align:center">
            <td>@count</td>
            <td>@item.Title</td>
            <td>@item.TestCategory.TestCategoryName</td>
            <td><img width="60px" src="@item.SignedUrl" class="figure-img img-fluid rounded" alt="@item.SavedFileName"></td>
            <td><a href="/Admin/Test/DeleteTest/@item.TestID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Admin/Test/EditTest/@item.TestID" class="btn btn-outline-dark"> Güncelle</a></td>
        </tr>
    }
</table> 

