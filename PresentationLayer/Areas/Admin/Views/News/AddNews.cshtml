@model News
@{
    ViewData["Title"] = "AddNews";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<h1 style="text-align:center;color:darkblue">Haber Ekleme Sayfası</h1>

<form method="post" enctype="multipart/form-data">
    <label>Haber Başlığı</label>
    <input asp-for="Title" class="form-control" style="background-color:lightgray" />
    <br />
    <label>İçerik</label>
    <textarea asp-for="Content" rows="4" cols="165" class="input" style="background-color:lightgray"> </textarea>
    <br />
  
    @Html.Label("Kategori:")
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.listCategory,
    new { @class = "form-control" })
    <br />
    <label>Haber Resmi</label>
    <input type="file" class="form-control border" name="Photo" />
    <br />

    <input name="SavedUrl" type="hidden" class="form-control" />
    <input name="SavedFileName" type="hidden" class="form-control" />
    <button class="btn btn-info"> Kaydet</button>
</form>